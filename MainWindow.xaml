<Window x:Class="GrandBluePairHuntingSupportTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GrandBluePairHuntingSupportTool"
        mc:Ignorable="d"
        Title="古戦場ペア狩り補助ツール" Height="230" Width="300" Topmost="True" WindowStyle="ToolWindow" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="69*"/>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="16*"/>
        </Grid.RowDefinitions>
        <Button Content="救援ID取得" HorizontalAlignment="Center" VerticalAlignment="Center" Width="270" Height="120" FontSize="24" Click="Button_Pick_RescueID_Click"/>
        <TextBlock x:Name="TextBlock_Tweet" HorizontalAlignment="Center" Grid.Row="1" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Width="270" FontSize="16"/>
        <Button Content="設定" HorizontalAlignment="Right" VerticalAlignment="Center" Width="75" Click="Button_Open_SettingDialog_Click" Grid.Column="1" Grid.Row="2" Height="20" Margin="0,0,10,0"/>
    </Grid>
</Window>
